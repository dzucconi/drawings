<nav class='Navigation'>
  <% if logged_in? %>
    <%= link_to 'Add drawing', new_drawing_path %>
    <%= link_to 'Formats', formats_path %>
    <%= link_to 'Logout', logout_path, method: :delete %>
  <% else %>
    <%= link_to 'Login', login_path %>
  <% end %>
</nav>

<div class='Grid'>
  <% @drawings.each do |drawing| %>
    <div class='Grid__item'>
      <%= link_to drawing do %>
        <% drawing.resized(width: drawing.format.width, height: drawing.format.height).tap do |image| %>
          <%= render 'common/image', image: image, title: drawing %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
